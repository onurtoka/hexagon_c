# Project settings
PROJECT_NAME           = "B_Hexagon"
PROJECT_NUMBER        = "1.0"
PROJECT_BRIEF         = "Hexagonal Architecture C++ Implementation"
OUTPUT_DIRECTORY      = @CMAKE_CURRENT_BINARY_DIR@/docs

# Input settings
INPUT                 = @CMAKE_CURRENT_SOURCE_DIR@/src
FILE_PATTERNS         = *.cpp *.hpp
RECURSIVE             = YES
EXCLUDE_PATTERNS      = */build/* */test/*

# Output settings
GENERATE_HTML         = YES
GENERATE_LATEX        = NO
HTML_OUTPUT           = html
HTML_FILE_EXTENSION   = .html

# Diagram settings
HAVE_DOT             = YES
UML_LOOK             = YES
CALL_GRAPH           = YES
CALLER_GRAPH         = YES
DOT_IMAGE_FORMAT     = svg
INTERACTIVE_SVG      = YES

# Documentation settings
EXTRACT_ALL          = YES
EXTRACT_PRIVATE      = YES
EXTRACT_STATIC       = YES
EXTRACT_LOCAL_CLASSES = YES
SHOW_INCLUDE_FILES   = YES
SORT_MEMBER_DOCS     = YES
WARNINGS             = YES
WARN_IF_UNDOCUMENTED = YES
QUIET                = NO

# Source browsing
SOURCE_BROWSER       = YES
INLINE_SOURCES      = YES
REFERENCED_BY_RELATION = YES
REFERENCES_RELATION  = YES

# C++ specific settings
BUILTIN_STL_SUPPORT = YES
LOOKUP_CACHE_SIZE   = 2

# Preprocessing
ENABLE_PREPROCESSING = YES
MACRO_EXPANSION     = YES
EXPAND_ONLY_PREDEF  = NO
SEARCH_INCLUDES     = YES
INCLUDE_PATH        = @CMAKE_CURRENT_SOURCE_DIR@/include

# Layout
LAYOUT_FILE         = 
TOC_INCLUDE_HEADINGS = 5
ALPHABETICAL_INDEX  = YES